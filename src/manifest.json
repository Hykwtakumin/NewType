{
  "name": "NewType",
  "version": "0.2.0",
  "description": "Visualize others new typing on Slack",
  "icons" : {
    "48":"icons/icon.png"
  },
  "browser_action": {
    "48": "icons/icon.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "cookies",
    "clipboardWrite",
    "contextMenus",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches" : [ "https://*.slack.com/*"],
      "js": [
        "scripts/content.js"
      ],
      "run_at" : "document_idle"
    }
  ],
  "background": {
    "scripts": [
      "scripts/background.js"
    ],
    "persistent": true
  },
  "web_accessible_resources": ["https://linda-server.herokuapp.com/*"],
  "manifest_version": 2
}